          <label class="form-check-label flag" for="us">ðŸ‡ºðŸ‡¸</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="country" id="uk" value="uk">
          <label class="form-check-label flag" for="uk">ðŸ‡¬ðŸ‡§</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="country" id="fr" value="fr">
          <label class="form-check-label flag" for="fr">ðŸ‡«ðŸ‡·</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="country" id="sg" value="sg">
          <label class="form-check-label flag" for="sg">ðŸ‡¸ðŸ‡¬</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="country" id="jp" value="jp">
          <label class="form-check-label flag" for="jp">ðŸ‡¯ðŸ‡µ</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="country" id="cn" value="cn">
          <label class="form-check-label flag" for="cn">ðŸ‡¨ðŸ‡³</label>
        </div>
      </div>
      <!-- CATEGORY -->
      <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" name="category" id="category">
          <option selected value> </option>
          <option>Business</option>
          <option>General</option>
          <option>Entertainment</option>
          <option>Health</option>
          <option>Science</option>
          <option>Sports</option>
          <option>Technology</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary w-100">Search</button>
    </form>

    <div class="bg-white py-3 px-4 rounded my-4 text-center">
      Made by <a href="https://github.com/niliaaa/ssd-day05-news">ðŸŒ± ai</a>
    </div>

  </div>
  <div class="col-8">
    {{#if articleArr }}
    <div class="search-params article w-100 py-2 px-4 mb-4 rounded">
      <span class="mr-2"> Search: </span>
      <span class="btn btn-sm btn-primary mr-2">{{searchKeyword}}</span>
      <span class="btn btn-sm btn-primary mr-2">{{searchRegion}}</span>
      <span class="btn btn-sm btn-primary mr-2">{{searchCategory}}</span>
    </div>
    {{else}}
    <div class="search-params article w-100 p-4 mb-4 rounded d-flex flex-column">
      <p class="lighten text-center"> Search something!</p>
    </div>
    {{/if}}

    <!-- ARTICLE LISTINGS -->
    {{#each articleArr}}
    <a href="{{this.url}}" target="new">
      <div class="article w-100 p-4 my-4 rounded d-flex flex-column">
        <p class="text-primary text-justify"><b>{{this.title}}</b></p>
        <div class="d-flex justify-content-start mb-4">
          <img src="{{this.urlToImage}}" alt="Article Image" class="headline-img mr-4">
          <p>{{this.description}}</p>
        </div>
        <span class="text-right lighten">{{this.publishedAt}}</span>
      </div>
    </a>
    {{/each}}
  </div>
</div>
